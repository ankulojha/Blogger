<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:id="@+id/single_fav_img"
        android:src="@drawable/add_image_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/single_fav_title"
        android:text="Title Goes Here"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_below="@+id/single_fav_img"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/single_fav_content"
        android:text="Content Goes Here"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/single_fav_title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/single_fav_user_name"
        android:text="Author"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/single_fav_content"
        />

        <Button
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:id="@+id/single_fav_btn_remove"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/single_fav_user_name"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorPrimary"
            android:background="@drawable/elliptical"
            android:layout_marginBottom="8dp"
            android:text="remove"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>